<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>HH:mm:ss.SSS}
    <root level="INFO">
        <appender-ref ref="STDERR" />
    </root>
</configuration>